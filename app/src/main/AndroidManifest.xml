<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hlamm.bkolsberg">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayHelpActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/help_title"/>
        <activity
            android:name=".AbfrageActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/abfrage_title"
            android:theme="@style/AppTheme.NoActionBar">
            <!--
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hlamm.bkolsberg.MainActivity" />
                -->
        </activity>
        <activity
            android:name=".DisplayAlleBildungsgaenge"
            android:parentActivityName=".MainActivity"
            android:label="@string/bildungsgaenge_title"/>
        <activity android:name=".DisplayBildungsgangActivity" />
        <activity
            android:name=".DisplayFavoritesActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/favorites_title"/>
    </application>

</manifest>